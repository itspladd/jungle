<section class="cart-show">

  <header class="page-header">
    <h1>My Cart</h1>
  </header>
  <% if enhanced_cart.any? %>
    <%= render 'items' %>
    <%= render 'checkout_form' %>
  <% else %>
    <div class="alert alert-info" role="alert">
      Your cart is empty! Head back to the
      <%= link_to 'products', :products, class: "alert-link" %>
      page to add items to your cart.
    </div>
  <% end %>

</section>
